{
    "table": "cms_users",
    "order": "name",
    "label": "CMS Editors",
    "model": {
        "label": "{{name}}"
    },
    "filters": {
        "admin": "0",
        "superadmin": "%user%"
    },
    "buttons_edit": [
        {
            "label_PL": "Ustaw hasło",
            "label_EN": "Set password",
            "type": "plugin",
            "icon": "fingerprint",
            "plugin": "cms_users_password"
        },
        {
            "label_PL": "Ustaw poziom dostępu",
            "label_EN": "Set authorization level",
            "type": "plugin",
            "icon": "lock",
            "plugin": "cms_users_auth"
        }
    ],
    "fields": [
        {
            "field": "name",
            "cms": {
                "label_PL": "Imię",
                "label_EN": "Name",
                "list": "show"
            }
        },
        {
            "field": "login",
            "cms": {
                "label": "Login"
            }
        },
        {
            "field": "password",
            "cms": {
                "label": "Password",
                "hidden": true
            }
        },
        {
            "field": "salt",
            "cms": {
                "label": "Salt",
                "hidden": true
            }
        },
        {
            "field": "auth",
            "settings": {
                "hash": "11z"
            },
            "cms": {
                "label": "Auth",
                "hidden": true
            }
        },
        {
            "field": "auth_label",
            "cms": {
                "label_PL": "Zestaw uprawnień",
                "label": "Authorization set",
                "edit": false,
                "list": "show",
                "hr": true
            }
        },
        {
            "field": "status",
            "type": "select",
            "cms": {
                "label": "Status",
                "hidden": true,
                "list": "show"
            }
        },
        {
            "field": "superadmin",
            "type": "select",
            "source": {
                "model": "cms_users"
            },
            "settings": {
                "null": true
            },
            "cms": {
                "label_PL": "Administrator nadrzędny",
                "list": "show",
                "edit": false
            }
        },
        {
            "field": "date_set",
            "type": "datetime",
            "settings": {
                "default": "{{now}}"
            },
            "cms": {
                "label_PL": "Data utworzenia",
                "label_EN": "Created",
                "edit": false
            }
        },
        {
            "field": "hide_menu",
            "type": "boolean",
            "cms": {
                "default": false,
                "label_PL": "Ukryj menu",
                "label_EN": "Hide menu"
            }
        },
        {
            "field": "admin",
            "type": "boolean",
            "cms": {
                "label": "Admin",
                "hidden": true
            }
        },
        {
            "field": "edit_all",
            "cms": {
                "label": "Edit All",
                "hidden": true
            }
        },
        {
            "field": "locked",
            "type": "boolean",
            "cms": {
                "label_EN": "Locked",
                "label_PL": "Blokada konta",
                "list": "edit"
            }
        }
    ]
}