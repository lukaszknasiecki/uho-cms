{
    "table": "cms_users",
    "order": "name",
    "label":"CMS Users",
    "model": {
        "label": "{{name}}"
    },
    "buttons_edit": [
        {
            "label_PL": "Ustaw hasło",
            "label_EN": "Set password",
            "type": "plugin",
            "icon": "fingerprint",
            "plugin": "cms_users_password"
        },
        {
            "label_PL": "Ustaw poziom dostępu",
            "label_EN": "Set authorization level",
            "type": "plugin",
            "icon": "lock",
            "plugin": "cms_users_auth"
        },
        {
            "label_PL": "Blokada",
            "label_EN": "Lock",
            "type": "plugin",
            "icon": "lock-open",
            "plugin": "cms_users_lock"
        }
    ],
    "fields": [
        {
            "field": "name",
            "label_PL": "Imię",
            "label_EN": "Name",
            "list": "show",
            "required": true
        },
        {
            "field": "login",
            "label": "Login",
            "unique": true,
            "required": true,
            "list": "show"
        },
        {
            "field": "password",
            "label": "Password",
            "hidden": true
        },
        {
            "field": "salt",
            "label": "Salt",
            "hidden": true
        },
        {
            "field": "auth",
            "type":"text",
            "label": "Auth",
            "hidden": true,
            "hash": "11z"
        },
        {
            "field": "auth_label",
            "label_PL": "Zestaw uprawnień",
            "label_EN": "Permissions set",
            "edit": false,
            "list": true
        },
        {
            "field": "status",
            "label": "Status",
            "edit": false,
            "type":"select",
            "default":"confirmed",
            "options":
            [
                {"value":"confirmed","label":"Confirmed"}
            ]
        },
        {
            "field": "date_set",
            "label_PL": "Data utworzenia",
            "label_EN": "Created",
            "type": "datetime",
            "default": "{{now}}",
            "edit": false
        },
        {
            "field": "hide_menu",
            "label_PL": "Ukryj menu",
            "label_EN": "Hide menu",
            "type": "boolean"
        },
        {
            "field": "admin",
            "label": "Admin",
            "hidden": true,
            "type": "boolean"
        },
        {
            "field":"email"
        },
        {
            "field":"superadmin",
            "type":"boolean",
            "hidden":true
        },
        {
            "field": "bad_login",
            "label_EN": "Current bad login attempts",
            "edit": false,
            "label_PL": "Aktualna ilość błędnych prób logowania",
            "type": "integer"
        },
        {
            "field": "edit_all",
            "label": "Edit All",
            "type": "boolean",
            "hidden": true
        },
        {
            "field": "locked",
            "type": "boolean",
            "list": true,
            "label_EN": "Locked",
            "label_PL": "Blokada konta",
            "hidden": true
        }
    ]
}