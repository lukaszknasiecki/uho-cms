{
    "table": "serdelia_models_fields",
    "label":
    {
        "page":"Serdelia Model Fields: <code>%1%</code>",
        "edit":"Serdelia Model Field: <code>{{parent}}/{{field}}</code>"
    },
    "filters":{"parent":"%1%"},
    "order": "_order",
    "model":{"label":"{{field}}"},
    "buttons_page": [
        {
            "label": "before",
            "plugin": "serdelia_models_fields_before",
            "on_load": true,
            "hidden":true
        },
        {
            "label": "after",
            "plugin": "serdelia_models_fields_after",
            "on_update": true,
            "hidden":true
        }
    ],
    "buttons_edit": [
        {
            "label": "before",
            "plugin": "serdelia_models_fields_before",
            "on_load": true,
            "hidden":true
        },
        {
            "label": "after",
            "plugin": "serdelia_models_fields_after",
            "on_update": true,
            "hidden":true
        }
    ],
    "page_update": "serdelia_models_fields/{{type}}",
    "fields": [
        {
            "field":"_order","label":"Order","type":"order","list":"order"
        }, 
        {
            "tab":"Copy",
            "field":"label",
            "label":"Label",
