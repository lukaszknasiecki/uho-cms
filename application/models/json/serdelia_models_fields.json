{
    "table": "serdelia_models_fields",
    "label": {
        "page": "Serdelia Model Fields: <code>%1%</code>",
        "edit": "Serdelia Model Field: <code>{{parent}}/{{field}}</code>"
    },
    "filters": {
        "parent": "%1%"
    },
    "order": "_order",
    "model": {
        "label": "{{field}}"
    },
    "buttons_page": [
        {
            "label": "before",
            "plugin": "serdelia_models_fields_before",
            "on_load": true,
            "hidden": true
        },
        {
            "label": "after",
            "plugin": "serdelia_models_fields_after",
            "on_update": true,
            "hidden": true
        }
    ],
    "buttons_edit": [
        {
            "label": "before",
            "plugin": "serdelia_models_fields_before",
            "on_load": true,
            "hidden": true
        },
        {
            "label": "after",
            "plugin": "serdelia_models_fields_after",
            "on_update": true,
            "hidden": true
        }
    ],
    "page_update": "serdelia_models_fields/{{type}}",
    "fields": [
        {
            "field": "_order",
            "type": "order",
            "cms": {
                "label": "Order",
                "list": "order"
            }
        },
        {
            "field": "label",
            "cms": {
                "tab": "Copy",
                "label": "Label",
                "list": "show"
            }
        },
        {
            "field": "field",
            "cms": {
                "style": "json",
                "hr": true,
                "label": "Field name",
                "list": "show"
            }
        },
        {
            "field": "parent",
            "cms": {
                "hidden": true
            }
        },
        {
            "field": "type",
            "type": "select",
            "settings": {
                "default": "string"
            },
            "cms": {
                "default": "string",
                "style": "json",
                "label": "Field type",
                "list": "show"
            }
        },
        {
            "field": "list",
            "cms": {
                "label": "List",
                "rows": 3,
                "list": "show"
            }
        },
        {
            "field": "tab",
            "cms": {
                "label": "Tab",
                "hr": true
            }
        },
        {
            "field": "section",
            "cms": {
                "label": "Section"
            }
        },
        {
            "field": "help",
            "type": "text",
            "cms": {
                "rows": 2,
                "label": "Field description"
            }
        },
        {
            "field": "settings",
            "type": "json",
            "cms": {
                "label": "Settings",
                "hr": true
            }
        }
    ]
}