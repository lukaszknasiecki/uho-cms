        },
        {
            "xtab":"Model",
            "hr":true,
            "label": "Field name",
            "field": "field",
            "list": true,
            "settings":{"style":"json"}
        } ,        
        {
            "field":"parent","type":"hidden"
        },        
        {
            "label":"Field type",
            "field":"type",
            "type":"select",
            "list":true,
            "settings":{"style":"json"},
            "default":"string"
        },
        {
            "field":"list","label":"List","ttype":"json","list":true,
            "settings":{"rows":3}
        },
        {
            "field":"tab","label":"Tab",
            "hr":true
        },
        {
            "field":"section","label":"Section"
        },
        {
            "field":"help",
            
            "label":"Field description",
            "type":"text",
            "settings":{"rows":2}
        }              ,
        {
            "label":"Settings",
            "type":"json",
            "hr":true,
            "field":"settings"
        }
        
    ]
}