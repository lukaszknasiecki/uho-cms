{
    "table": "serdelia_models",
    "label": {
        "page": "Serdelia Models",
        "edit": "Serdelia Model: <code>{% if id %}{{id}}{% else %}new{% endif %}</code>"
    },
    "disable": [
        "remove"
    ],
    "order": "id",
    "model": {
        "label": "{{id}}"
    },
    "buttons_page": [
        {
            "label": "before",
            "plugin": "serdelia_models_before",
            "on_load": true,
            "hidden": true
        }
    ],
    "buttons_edit": [
        {
            "label": "before",
            "plugin": "serdelia_models_before",
            "on_load": true,
            "hidden": true
        },
        {
            "label": "after",
            "plugin": "serdelia_models_after",
            "on_update": true,
            "hidden": true
        },
        {
            "label": "Delete",
            "plugin": "serdelia_models_remove",
            "icon": "remove",
            "class": "default"
        },
        {
            "type": "page",
            "icon": "edit",
            "label": "Edit data",
            "page": "{{id}}",
            "class": "default"
        },
        {
            "type": "page",
            "icon": "table-rows",
            "label": "Fields",
            "page": "serdelia_models_fields,{{id}}"
        }
    ],
    "fields": [
        {
            "field": "id",
            "cms": {
                "tab": "Settings",
                "label": "Model name",
                "list": "show",
                "style": "json"
            }
        },
        {
            "field": "model_name",
            "type": "select",            
            "source": {
                "model": "serdelia_models"
            },
            "cms": {                
                "label": "Parent model name",
                "style": "json"
            },
            "settings":{
                "null": true
            }
        },
        {
            "field": "table",
            "type": "select",
            "source": {
                "model": "serdelia_tables"
            },
            "cms": {
                "label": "Table",
                "list": "show",
                "style": "json"
            }
        },
        {
            "field": "order",
            "cms": {
                "label": "Default order",
                "style": "json"
            }
        },
        {
            "field": "filters",
            "type": "json",
            "cms": {
                "label": "Filters",
                "rows": 2
            }
        },
        {
            "field": "page_update",
            "cms": {
                "label": "Page update",
                "style": "json"
            }
        },
        {
            "field": "children",
            "type": "json",
            "cms": {
                "label": "Children models",
                "rows": 5
            }
        },
        {
            "field": "label",
            "cms": {
                "tab": "User Interface",
                "label": "Label (page)",
                "list": "show"
            }
        },
        {
            "field": "label_edit",
            "cms": {
                "label": "Label (edit)",
                "style": "json"
            }
        },
        {
            "field": "help",
            "type": "text",
            "cms": {
                "label": "Information copy",
                "rows": 3
            }
        },
        {
            "field": "disable",
            "type": "checkboxes",
            "options": [
                {
                    "label": "Add",
                    "value": "add"
                },
                {
                    "label": "Copy",
                    "value": "copy"
                },
                {
                    "label": "Remove",
                    "value": "remove"
                }
            ],
            "cms": {
                "label": "Disable actions"
            }
        },
        {
            "field": "model",
            "type": "json",
            "cms": {
                "label": "Model shortview",
                "rows": 5
            }
        },
        {
            "field": "layout",
            "type": "json",
            "cms": {
                "label": "Layout",
                "rows": 5
            }
        },
        {
            "field": "_status",
            "cms": {
                "tab": "Status",
                "label": "Model health",
                "list": {
                    "html": "<span class='badge badge-{{value}}'>{{value}}</span>"
                }
            }
        },
        {
            "field": "_status_info",
            "type": "text"
        }
    ]
}