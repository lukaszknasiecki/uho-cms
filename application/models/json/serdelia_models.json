{
    "table": "serdelia_models",
    "label":
    {
        "page":"Serdelia Models",
        "edit":"Serdelia Model: <code>{% if id %}{{id}}{% else %}new{% endif %}</code>"
    },
    "disable":["remove"],
    "order": "id",
    "model":{"label":"{{id}}"},
    "buttons_page": [
        {
            "label": "before",
            "plugin": "serdelia_models_before",
            "on_load": true,
            "hidden":true
        }
    ],
    "buttons_edit": [
        {
            "label": "before",
            "plugin": "serdelia_models_before",
            "on_load": true,
            "hidden":true
        },
        {
            "label": "after",
            "plugin": "serdelia_models_after",
            "on_update": true,
            "hidden":true
        },
        {
            "label": "Delete",
            "plugin": "serdelia_models_remove",
            "icon":"remove",
            "class":"default"
        },
        {
            "type":"page",
            "icon":"edit",
            "label":"Edit data",
            "page": "{{id}}",
            "class":"default"
        },
        {
            "type":"page",
            "icon":"table-rows",
            "label":"Fields",
            "page": "serdelia_models_fields,{{id}}"
        }
    ],
    "fields": [
        {
            "tab":"Settings",
            "label": "Model name",
            "field": "id",
            "list": true,
            "settings":{"style":"json"}
        },
        {"field":"model_name","label":"Parent model name","type":"select",
            "null":true,"source":{"model":"serdelia_models"},
            "settings":{"style":"json"}
        },
        {
            "field":"table",
            "label":"Table",
            "list":true,
            "type":"select",
            "source":{"model":"serdelia_tables"},
            "settings":{"style":"json"}
        },        
        {
            "field":"order",
            "label":"Default order",
            "settings":{"style":"json"}
        },
        {
            "field":"filters","label":"Filters","type":"json","settings":{"rows":2}
        },
        {
            "field":"page_update","label":"Page update","settings":{"style":"json"}
        },
        {
            "field":"children",
            "label":"Children models","type":"json","settings":{"rows":"small"}
        },
        {
            "tab":"User Interface",
            "field":"label",
            "list":true,
            "label":"Label (page)"
        },
        {
            "field":"label_edit",
            "label":"Label (edit)",
            "settings":{"style":"json"}
        },
        {
            "field":"help","label":"Information copy","type":"text",
            "settings":{"rows":3}
        },

        {
            
            "field":"disable","label":"Disable actions","type":"checkboxes",
            "options":
            [
                {"label":"Add","value":"add"},
                {"label":"Copy","value":"copy"},
                {"label":"Remove","value":"remove"}
            ]
        },
        
        {
            "field":"model",
            "label":"Model shortview","type":"json","settings":{"rows":"small"}
        },
        {
            "field":"layout","label":"Layout","type":"json","settings":{"rows":"small"}
        },
        {
            "tab":"Status","field":"_status","list":true,"label":"Model health",
            "list":{"html":"<span class='badge badge-{{value}}'>{{value}}</span>"}
        },
        {
            "field":"_status_info","type":"text"
        }
        
    ]
}